<!DOCTYPE html>
@using FootBallPlayer.Models
@using Microsoft.AspNet.Identity
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Custom Theme files -->
    @Styles.Render("~/Content/css")
    <link rel="shortcut icon" href="favicon.ico">

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,600,400italic,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/icomoon.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="fh5co-page">
        <aside id="fh5co-aside" role="complementary" class="border js-fullheight">
            @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            <h1 id="fh5co-logo"><a href="index.html"><img src="~/images/logo.png" /></a></h1>
            <nav id="fh5co-main-menu" role="navigation">
                <ul>
                    <li></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Following", "Edit", "Player")</li>
                    }
                    @{
                        if (User.IsInRole("Admin"))
                        {

                        }
                    }
                    @{
                        if (User.IsInRole("Player"))
                        {
                        <li>@Html.ActionLink("Followers", "Edit", "Players")</li>
                        <li>@Html.ActionLink("Profile", "Edit", "Players",new { id = @User.Identity.GetUserId() },null)</li>
                        }
                    }
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>

            <div class="fh5co-footer">
                <p>&copy; @DateTime.Now.Year - FootBallPlayers</p>
                <ul>
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
                
            </div>

        </aside>

        <div id="fh5co-main">

            @RenderBody()
            <hr />
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.stellar.min.js"></script>
    <script src="~/Scripts/jquery.waypoints.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/jquery.countTo.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
