    <dl class="dl-horizontal">
        <h3 style="color:red;text-align:center;padding-top:15px">Title</h3>
        <img src="~/Files/ArticlesMedia/@Model.Article.CoverPhoto" height="200px" width="100%" />



        <dd style="padding:20px;margin-left:0">
            @Html.DisplayFor(model => model.Article.Text)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Article.PublishDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Article.PublishDate)
        </dd>





    </dl>
    <hr />
    <br />
    <p style="color:red">
