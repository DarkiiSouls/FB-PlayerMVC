@model FootBallPlayer.Models.Article

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_PlayerLayout.cshtml";
}
@using Microsoft.AspNet.Identity


<div style="margin: 60px 20px 30px 20px;
    width: 50%;
    text-align: center;
    left: 25%;
    position: relative;    box-shadow: 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12), 0 2px 4px -1px rgba(0,0,0,.2);">

    <dl class="dl-horizontal">

        <img src="~/Files/ArticlesMedia/@Model.CoverPhoto" height="200px" width="100%" />



        <dd style="padding:20px">
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PublishDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublishDate)
        </dd>





    </dl>
    <hr />
    <br />
    <p style="color:red">
        @if (User.IsInRole("Admin") || Model.Visiter.Id==User.Identity.GetUserId()) {
            @Html.ActionLink("Edit", "Edit", new { id = Model.ArticleId }) 
          } |

        @Html.ActionLink("Back to List", "Index")
    </p>
    <br />
</div>

