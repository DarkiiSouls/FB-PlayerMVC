<div style=" box-shadow: 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12), 0 2px 4px -1px rgba(0,0,0,.2);
    text-align: center;
    position: relative;margin: 30px 10% 10% 10%">
    <h3 style="color:red ;text-align:center">Comment</h3>
    @Html.Action("Create", "Comments", new Comment { MediaId = Model.VideoId, MediaType = 1 })
    @foreach (var item in Model.Comments)
    {
        <div class="col-md-4">
            @item.Text
        </div>
    }
</div>